<div class="container-fluid">
    <div class="row">
        {{> sidebar activePage='nat'}}

        <main class="col-md-9 ms-sm-auto col-lg-10 px-md-4 main-content" style="padding-top: 1.5rem;">
            <!-- Header section -->
            <div class="d-flex justify-content-between flex-wrap flex-md-nowrap align-items-center pb-3 mb-4 border-bottom border-secondary border-opacity-25">
                <div>
                    <h1 class="h2 mb-0">Configuração de NAT</h1>
                    <p class="text-muted small mb-0 mt-1">Gerencie o encaminhamento de portas (Port Forwarding)</p>
                </div>
                <div class="btn-toolbar mb-2 mb-md-0">
                    <button type="button" class="btn btn-jupiter d-flex align-items-center" data-bs-toggle="collapse" data-bs-target="#collapseAddNatForm">
                        <i class="bi bi-plus-lg me-2"></i> Nova Regra
                    </button>
                </div>
            </div>

            {{#if success}}
            <div class="alert alert-success alert-dismissible fade show bg-success bg-opacity-10 text-success border-success border-opacity-25 mb-4 border-0 shadow-sm" role="alert">
                <i class="bi bi-check-circle-fill me-2"></i> Operação realizada com sucesso!
                <button type="button" class="btn-close btn-close-white" data-bs-dismiss="alert" aria-label="Close"></button>
            </div>
            {{/if}}

            <!-- Add New NAT Rule Form (Collapsible) -->
            <div class="collapse mb-5" id="collapseAddNatForm">
                <div class="dash-card border-jupiter border-opacity-25 p-4 shadow-sm">
                    <div class="d-flex align-items-center mb-4">
                        <h5 class="mb-0 text-light">Adicionar Regra de Port Forwarding</h5>
                    </div>
                    
                    <form action="/nat/add" method="POST" class="row g-4">
                        <div class="col-md-3">
                            <label class="form-label text-muted small text-uppercase fw-bold">Descrição</label>
                            <input type="text" class="form-control bg-dark text-light border-secondary py-2" name="descricao" placeholder="Ex: Acesso Web Receptor" required>
                        </div>
                        <div class="col-md-2">
                            <label class="form-label text-muted small text-uppercase fw-bold">Porta Pública</label>
                            <input type="number" class="form-control bg-dark text-light border-secondary py-2 font-mono" name="public_port" placeholder="8080" required>
                        </div>
                        <div class="col-md-3">
                            <label class="form-label text-muted small text-uppercase fw-bold">IP Privado (Destino)</label>
                            <input type="text" class="form-control bg-dark text-light border-secondary py-2 font-mono" name="private_ip" placeholder="192.168.1.10" required>
                        </div>
                        <div class="col-md-2">
                            <label class="form-label text-muted small text-uppercase fw-bold">Porta Privada</label>
                            <input type="number" class="form-control bg-dark text-light border-secondary py-2 font-mono" name="private_port" placeholder="80" required>
                        </div>
                        <div class="col-md-2">
                            <label class="form-label text-muted small text-uppercase fw-bold">Protocolo</label>
                            <select class="form-select bg-dark text-light border-secondary py-2" name="protocol" required>
                                <option value="TCP">TCP</option>
                                <option value="UDP">UDP</option>
                                <option value="BOTH">TCP/UDP (BOTH)</option>
                            </select>
                        </div>

                        <div class="col-12 text-end border-top border-secondary border-opacity-10 pt-4 mt-4">
                            <button type="button" class="btn btn-link text-muted me-3 text-decoration-none" data-bs-toggle="collapse" data-bs-target="#collapseAddNatForm">Cancelar</button>
                            <button type="submit" class="btn btn-jupiter px-5 shadow">
                                <i class="bi bi-save me-2"></i> Criar Regra
                            </button>
                        </div>
                    </form>
                </div>
            </div>

            <!-- List NAT Rules -->
            <div class="dash-card p-0 overflow-hidden shadow-sm">
                <div class="p-4 border-bottom border-secondary border-opacity-10 bg-opacity-5">
                    <h5 class="mb-0 text-light d-flex align-items-center">
                        <i class="bi bi-router me-2 text-jupiter"></i> Regras de NAT Ativas
                        <span class="badge bg-jupiter bg-opacity-10 ms-3 font-mono" style="font-size: 0.7rem;">{{natRules.length}} TOTAL</span>
                    </h5>
                </div>
                
                <div class="table-responsive">
                    <table class="table table-custom table-hover align-middle mb-0">
                        <thead class="bg-dark bg-opacity-50">
                            <tr>
                                <th class="ps-4">Descrição</th>
                                <th>Pública</th>
                                <th>Encaminhamento (IP:Porta)</th>
                                <th>Protocolo</th>
                                <th class="text-end pe-4">Ações</th>
                            </tr>
                        </thead>
                        <tbody>
                            {{#each natRules}}
                            <tr>
                                <td class="ps-4">
                                    <form id="form-edit-nat-{{this.id}}" action="/nat/update" method="POST">
                                        <input type="hidden" name="id" value="{{this.id}}">
                                        <input type="text" class="form-control form-control-sm bg-dark border-0 text-light fw-bold p-1 edit-input" 
                                            name="descricao" value="{{this.descricao}}" style="box-shadow: none;">
                                </td>
                                <td>
                                    <input type="number" class="form-control form-control-sm bg-transparent border-0 text-light font-mono p-1 edit-input" 
                                        name="public_port" value="{{this.public_port}}" style="width: 80px; box-shadow: none;">
                                </td>
                                <td>
                                    <div class="d-flex align-items-center gap-2">
                                        <input type="text" class="form-control form-control-sm bg-transparent border-0 text-light font-mono p-1 edit-input" 
                                            name="private_ip" value="{{this.private_ip}}" style="width: 120px; box-shadow: none;">
                                        <span class="text-muted">:</span>
                                        <input type="number" class="form-control form-control-sm bg-transparent border-0 text-light font-mono p-1 edit-input" 
                                            name="private_port" value="{{this.private_port}}" style="width: 70px; box-shadow: none;">
                                    </div>
                                </td>
                                <td>
                                    <select class="form-select form-select-sm bg-transparent border-0 text-light font-mono edit-input" 
                                        name="protocol" style="box-shadow: none;">
                                        <option value="TCP" {{#if (eq this.protocol 'TCP')}}selected{{/if}}>TCP</option>
                                        <option value="UDP" {{#if (eq this.protocol 'UDP')}}selected{{/if}}>UDP</option>
                                        <option value="BOTH" {{#if (eq this.protocol 'BOTH')}}selected{{/if}}>BOTH</option>
                                    </select>
                                </td>
                                <td class="text-end pe-4">
                                    <div class="btn-group">
                                        <button type="submit" form="form-edit-nat-{{this.id}}" class="btn btn-sm btn-outline-success border-0 rounded-circle" title="Salvar">
                                            <i class="bi bi-check-lg"></i>
                                        </button>
                                    </form>
                                    <form action="/nat/delete" method="POST" onsubmit="return confirm('Excluir esta regra?')">
                                        <input type="hidden" name="id" value="{{this.id}}">
                                        <button type="submit" class="btn btn-sm btn-outline-danger border-0 rounded-circle" title="Excluir">
                                            <i class="bi bi-trash3"></i>
                                        </button>
                                    </form>
                                    </div>
                                </td>
                            </tr>
                            {{/each}}
                        </tbody>
                    </table>
                </div>
                
                {{#unless natRules.length}}
                <div class="p-5 text-center">
                    <i class="bi bi-diagram-3 fs-1 text-muted opacity-25"></i>
                    <p class="text-muted mt-3">Nenhuma regra de NAT cadastrada.</p>
                </div>
                {{/unless}}
            </div>
        </main>
    </div>
</div>

<script>
    // Estilização dinâmica para inputs de edição quando alterados
    document.querySelectorAll('.edit-input').forEach(input => {
        input.addEventListener('change', function() {
            this.classList.add('text-jupiter');
            this.closest('tr').classList.add('bg-jupiter', 'bg-opacity-5');
        });
    });
</script>

<style>
    .edit-input:focus {
        background-color: rgba(255, 255, 255, 0.05) !important;
        border-bottom: 1px solid var(--jupiter-color) !important;
        border-radius: 0;
    }
</style>
