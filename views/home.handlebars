<div class="container-fluid">
    <div class="row">
        {{> sidebar activePage='dashboard'}}

        <main class="col-md-9 ms-sm-auto col-lg-10 px-md-4 main-content">
            <div
                class="d-flex justify-content-between flex-wrap flex-md-nowrap align-items-center pt-4 pb-3 mb-4 border-bottom border-secondary border-opacity-25">
                <h1 class="h2">Dashboard <span class="text-muted fs-5 fw-light ms-2">| Visão Geral</span></h1>
                <div class="btn-toolbar mb-2 mb-md-0">
                    <div class="btn-group me-2">
                        <button type="button" class="btn btn-sm btn-outline-secondary font-mono"
                            onclick="fetchLogs()">Exportar Logs</button>
                    </div>
                </div>
            </div>

            <div class="row g-4 mb-5">
                <div class="col-md-4">
                    <div class="dash-card">
                        <div class="d-flex justify-content-between align-items-start">
                            <div>
                                <h6 class="text-muted text-uppercase small mb-1">System Uptime</h6>
                                <h2 class="card-value mt-1 mb-0" id="uptime">{{systemUptime}}</h2>
                            </div>
                            <div class="p-2 bg-jupiter-subtle rounded-2">
                                <i class="bi bi-activity text-secondary fs-4"></i>
                            </div>
                        </div>
                        <div class="mt-3">
                            <small class="text-success font-mono"><i
                                    class="bi bi-check-circle-fill me-1"></i>--</small>
                        </div>
                    </div>
                </div>

                <div class="col-md-4">
                    <div class="dash-card">
                        <div class="d-flex justify-content-between align-items-center mb-3">
                            <h6 class="text-muted text-uppercase small mb-0">Network Traffic</h6>
                            <i class="bi bi-arrow-down-up text-jupiter"></i>
                        </div>

                        <div class="d-flex justify-content-between mb-1 font-mono small">
                            <span class="text-muted">RX (Down)</span>
                            <span class="text-light" id="download-traffic">{{traffic.rx}}</span>
                        </div>
                        <div class="progress mb-3" style="height: 4px;">
                            <div class="progress-bar bg-jupiter" style="width: {{traffic.rxPercent}}%" id="download-traffic-progress">
                            </div>
                        </div>

                        <div class="d-flex justify-content-between mb-1 font-mono small">
                            <span class="text-muted">TX (Up)</span>
                            <span class="text-light" id="upload-traffic">{{traffic.tx}}</span>
                        </div>
                        <div class="progress" style="height: 4px;">
                            <div class="progress-bar bg-info" style="width: {{traffic.txPercent}}%" id="upload-traffic-progress"></div>
                        </div>
                    </div>
                </div>
            </div>

            <div class="d-flex justify-content-between align-items-center mb-3">
                <h4 class="h5 text-light mb-0 d-flex align-items-center">
                    <i class="bi bi-terminal me-2 text-secondary"></i> Logs do Sistema
                </h4>
                <div class="btn-group btn-group-sm" role="group" aria-label="Log Filter">
                    <input type="radio" class="btn-check" name="logType" id="log-telemetry" autocomplete="off" checked
                        onclick="setLogType('telemetry')">
                    <label class="btn btn-outline-jupiter" for="log-telemetry">Telemetry</label>

                    <input type="radio" class="btn-check" name="logType" id="log-watchdog" autocomplete="off"
                        onclick="setLogType('watchdog')">
                    <label class="btn btn-outline-jupiter" for="log-watchdog">Watchdog</label>

                    <input type="radio" class="btn-check" name="logType" id="log-init" autocomplete="off"
                        onclick="setLogType('init')">
                    <label class="btn btn-outline-jupiter" for="log-init">Init System</label>
                </div>
            </div>
            <div class="table-responsive">
                <table class="table table-custom table-hover">
                    <thead>
                        <tr>
                            <th scope="col" style="width: 15%">Timestamp</th>
                            <th scope="col" style="width: 10%">Level</th>
                            <th scope="col" style="width: 15%">Module</th>
                            <th scope="col">Message</th>
                        </tr>
                    </thead>
                    <tbody id="logs-telemetry">
                        <tr>
                            <td colspan="4" class="text-center text-muted py-3">
                                <span class="spinner-border spinner-border-sm me-2" role="status"
                                    aria-hidden="true"></span>
                                Conectando ao host de telemetria...
                            </td>
                        </tr>
                    </tbody>

                    <tbody id="logs-watchdog" style="display: none;">
                        {{#if watchdogLog.length}}
                            {{#each watchdogLog}}
                            <tr>
                                <td><span class="font-mono small text-muted">{{this.timestamp}}</span></td>
                                <td><span class="badge bg-warning bg-opacity-10 text-warning border border-warning border-opacity-25 font-mono" style="font-size: 0.65rem;">WATCHDOG</span></td>
                                <td><span class="text-muted small">SERVICE</span></td>
                                <td>{{this.message}}</td>
                            </tr>
                            {{/each}}
                        {{else}}
                            <tr>
                                <td colspan="4" class="text-center text-muted py-3">Nenhum log de watchdog encontrado.</td>
                            </tr>
                        {{/if}}
                    </tbody>

                    <tbody id="logs-init" style="display: none;">
                        {{#if initLog.length}}
                            {{#each initLog}}
                            <tr>
                                <td><span class="font-mono small text-muted">{{this.timestamp}}</span></td>
                                <td><span class="badge bg-info bg-opacity-10 text-info border border-info border-opacity-25 font-mono" style="font-size: 0.65rem;">INIT</span></td>
                                <td><span class="text-muted small">SYSTEM</span></td>
                                <td>{{this.message}}</td>
                            </tr>
                            {{/each}}
                        {{else}}
                            <tr>
                                <td colspan="4" class="text-center text-muted py-3">Nenhum log de inicialização encontrado.</td>
                            </tr>
                        {{/if}}
                    </tbody>
                </table>

<script>
    function setLogType(type) {
        // Esconder todos os tbodies
        const sections = ['telemetry', 'watchdog', 'init'];
        sections.forEach(s => {
            const el = document.getElementById('logs-' + s);
            if (el) el.style.display = 'none';
        });

        // Mostrar o selecionado
        const selectedBody = document.getElementById('logs-' + type);
        if (selectedBody) {
            selectedBody.style.display = 'table-row-group';
        }
    }

    function fetchLogs() {
        alert('Exportação de logs iniciada...');
    }
</script>
            </div>
        </main>
    </div>
</div>